<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="18dp">

            <TextView
                android:id="@+id/status_webhook_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Is connect: "
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/status_webhook_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="True"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/status_webhook_label" />

            <TextView
                android:id="@+id/ip_webhook_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IP connect: "
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/status_webhook_label"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/ip_webhook_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="True"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/status_webhook_info"
                app:layout_constraintStart_toEndOf="@id/ip_webhook_label" />

            <TextView
                android:id="@+id/describe_webhook_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Describe connect: "
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/ip_webhook_label"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/describe_webhook_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="True"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/ip_webhook_info"
                app:layout_constraintStart_toEndOf="@id/describe_webhook_label" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>